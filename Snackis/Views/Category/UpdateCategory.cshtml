@model Entities
@{
    ViewData["Title"] = "Update Category";
}

<div>
    @if (ViewBag.CategoryId > 0)
    {
        <form asp-controller="Category" asp-action="UpdateCategory">

            <p>Current name of Category: @Model.category.Name</p>
            <label>Category name</label>
            <br />
            <input type="text" asp-for="category.Name" />
            <span asp-validation-for="category.Name"></span>

            <input type="hidden" asp-for="category.Id"></input>

            <div asp-validation-summary="All" class="text-danger" style="margin-top: 1rem;">
                <button class="btn btn-primary" type="submit">Update</button>
            </div>
        </form>
    }
    else
    {
        <form asp-controller="Category" asp-action="UpdateCategory" method="get">

            @if (Model.Categories.Count() > 0)
            {
                <h5>Wich Category name do you want to update?</h5>
                <br />
                @foreach (var item in Model.Categories)
                {
                    <h5>@item.Name <a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-primary" style="margin-left: 1rem;">Update</a></h5>
                }
            }
        </form>
    }
</div>