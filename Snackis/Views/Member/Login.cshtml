@model Member
@{
    ViewData["Title"] = "Login";
}

<div >    
    <form asp-controller="Member" asp-action="Login">

        <label asp-for="UserName"></label>
        <br />
        <input type="text" asp-for="UserName">
        <span asp-validation-for="UserName"></span>
        <br />

        <label asp-for="Password"></label>
        <br />
        <input type="password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
        <br />
        <div asp-validation-summary ="All" class="text-danger" style="margin-top: 1rem;">
            <button type="submit">Login</button>
            <button><a asp-controller="Member" asp-action="Register" style="color: black; text-decoration: none;">Click here to register</a></button>

        </div>
    </form>

</div>