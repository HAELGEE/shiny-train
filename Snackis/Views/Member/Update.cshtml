@model Member
@{
    ViewData["Title"] = "Update Profile";
}
<div>
    <form asp-controller="Member" asp-action="Update">
        @* Hidden stuff *@
        <input type="hidden" asp-for="UserName" />
        <input type="hidden" asp-for="Birthday" />
        <input type="hidden" asp-for="Email" />
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="IsOwner" />
        <input type="hidden" asp-for="IsAdmin" />
        <input type="hidden" asp-for="RegisteryDate"/>
        <input type="hidden" asp-for="TotalPosts"/>
        <input type="hidden" asp-for="TotalReply" />
        <input type="hidden" asp-for="Reports" />
        <input type="hidden" asp-for="ProfileImagePath" value="@Model.ProfileImagePath" />
        


        <label asp-for="FirstName"></label>
        <input type="text" asp-for="FirstName" class="form-control"></input>
        <span asp-validation-for="FirstName"></span>

        <label asp-for="LastName"></label>
        <input type="text" asp-for="LastName" class="form-control"></input>
        <span asp-validation-for="LastName"></span>


        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" required class="form-control"></input>
        <span asp-validation-for="Password"></span>
        <label asp-for="PasswordValidation"></label>
        <input type="password" asp-for="PasswordValidation" required class="form-control"></input>
        <span asp-validation-for="PasswordValidation"></span>
        
        <label asp-for="UserInfo"></label>
        <textarea asp-for="UserInfo" style="width: 20rem; height: 5rem;" class="form-control"></textarea>

        <div asp-validation-summary="All" class="text-danger" style="margin-top: 1rem;">
            <button class="btn btn-primary" type="submit">Update</button>
        </div>
    </form>
</div>